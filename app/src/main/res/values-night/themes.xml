<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="Theme.APISplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/fondo</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>

    <style name="FollowButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textColor">@color/colorFollowText</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/greyClaro</item>
    </style>
    <style name="ScreenBackground2">
        <item name="android:background">@color/greyOscuro</item>
    </style>
    <style name="CardBackgroungd">
        <item name="android:background">@color/greyOscuro</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TituloSeg">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/greyOscuro</item>
    </style>

    <style name="IconButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/blancoClaro</item>
    </style>

</resources>