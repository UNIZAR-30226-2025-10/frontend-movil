<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo"
    android:gravity="center">

    <!-- Círculo con número dentro -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/circleText"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_drawable"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <!-- Texto descriptivo -->
    <TextView
        android:id="@+id/textoDescriptivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se enviará un código al correo electrónico proporcionado. Deberá introducir dicho código en la siguiente pantalla."
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAlignment="center" />

    <!-- Entrada para el correo -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:textColorHint="#B3B3B3"
        android:textColor="#FFFFFF"
        android:background="@drawable/borde_azul_redondo"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botón de siguiente -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/blueNuestro"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />
</LinearLayout>
