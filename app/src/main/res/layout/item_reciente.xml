<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/imageViewReciente"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_cancion"
        android:background="@drawable/rounded_edittext"
        android:clipToOutline="true"
        android:outlineProvider="background" />

    <TextView
        android:id="@+id/textViewReciente"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nombre de la coleccion"
        android:textStyle="bold"
        android:textColor="#000E3B"
        android:fontFamily="@font/poppins_bold"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/textViewReciente2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Nombre del artista"
        android:textColor="#000E3B"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>

