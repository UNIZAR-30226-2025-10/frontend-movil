<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#000e3b"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar_logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/logo"
                android:layout_centerVertical="true"
                android:contentDescription="@string/logo"/>

            <!-- Imagen de notificaciones como botón -->
            <FrameLayout
                android:id="@+id/notificationButtonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="92dp">

                <!-- Imagen de notificaciones como botón -->
                <ImageButton
                    android:id="@+id/notificationImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/notification"
                    android:background="@android:color/transparent"
                    android:contentDescription="Imagen de notificaciones"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Circulito rojo -->
                <View
                    android:id="@+id/notificationDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/dot_notificacion"
                    android:visibility="gone"/>

                <!-- Switch de modo -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/notificationButtonContainer"
                    android:layout_marginEnd="16dp"
                    android:thumb="@drawable/thumb"
                    app:track="@drawable/track" />
            </FrameLayout>


            <!-- Imagen de perfil como botón -->
            <ImageButton
                android:id="@+id/profileImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="21dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile"
                android:background="@android:color/transparent"
                android:contentDescription="Imagen de perfil"
                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView para el contenido principal -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Noizzy principal - reutilizando item_noizzy -->
            <include
                android:id="@+id/noizzyItemView"
                layout="@layout/item_noizzy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

            <!-- Sección de comentarios -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextColor"
                android:text="Comentarios"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp" />

            <TextView
                android:id="@+id/tvNoComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay comentarios aún"
                android:textAlignment="center"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Lista de comentarios (también usando item_noizzy) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNoizzitos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <!-- Espacio al final -->
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation igual al que ya tienes -->
    <LinearLayout
        android:id="@+id/miniPlayer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blueNuestro"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagen de la canción -->
        <ImageView
            android:id="@+id/songImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:contentDescription="Portada de la canción"/>

        <!-- Información de la canción -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la Canción"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/songArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artista"
                android:textColor="#B3B3B3"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Barra de progreso de reproducción -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:progress="40"
                android:progressTint="#1DB954"
                android:backgroundTint="#555555"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnRetroceder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Retroceder"
            android:background="@null"
            android:src="@android:drawable/ic_media_previous" />

        <!-- Botón de stop -->
        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Detener"
            android:background="@android:color/transparent"
            app:tint="#FFFFFF"/>

        <ImageButton
            android:id="@+id/btnAvanzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Avanzar"
            android:background="@null"
            android:src="@android:drawable/ic_media_next" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#000e3b"
        android:orientation="horizontal"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        tools:ignore="DuplicateIds">

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000e3b"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Botón Home -->
            <ImageButton
                android:id="@+id/nav_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_home"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:layout_weight="1"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/homeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#B3B3B3"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000e3b"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Botón Buscar -->
            <ImageButton
                android:id="@+id/nav_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_search"
                android:background="@android:color/transparent"
                android:contentDescription="Buscar"
                android:layout_weight="1"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/searchText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textColor="#B3B3B3"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000e3b"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Botón Crear -->
            <ImageButton
                android:id="@+id/nav_create"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                android:background="@android:color/transparent"
                android:contentDescription="Crear"
                android:layout_weight="1"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/createText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Playlist"
                android:textColor="#B3B3B3"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noizzys_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000e3b"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Botón Home -->
            <ImageButton
                android:id="@+id/nav_noizzys"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/noizzy"
                android:background="@android:color/transparent"
                android:contentDescription="Noizzys"
                android:layout_weight="1"
                app:tint="#FFFFFF"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/noizzysText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Noizzys"
                android:textColor="#B3B3B3"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>