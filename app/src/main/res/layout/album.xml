<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDCDC"
    android:fillViewport="true"
    tools:context=".activities.AlbumDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#000e3b"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/toolbar_logo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/logo"
                    android:src="@drawable/logo" />

                <FrameLayout
                    android:id="@+id/notificationButtonContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="92dp">

                    <ImageButton
                        android:id="@+id/notificationImageButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/notification"
                        android:background="@android:color/transparent"
                        android:contentDescription="Imagen de notificaciones"
                        android:clickable="true"
                        android:focusable="true"/>

                    <View
                        android:id="@+id/notificationDot"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/dot_notificacion"
                        android:visibility="gone"/>
                </FrameLayout>

                <ImageButton
                    android:id="@+id/profileImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="21dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Perfil"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- Contenedor principal (sin ScrollView) -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#DDDCDC"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="130dp">

                <!-- Sección del álbum -->
                <LinearLayout
                    android:id="@+id/profileSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/no_cancion"
                            android:background="@drawable/rounded_edittext"
                            android:clipToOutline="false"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="16dp">

                            <TextView
                                android:id="@+id/nombreAlbum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="#000E3B"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/artista"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#000E3B"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/duracion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#000E3B"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Botones de reproducción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/reproNormal"
                        android:layout_width="43dp"
                        android:layout_height="37dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/rounded_button"
                        android:drawableStart="@drawable/ic_play_playlist"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/aleatorio"
                        android:layout_width="43dp"
                        android:layout_height="37dp"
                        android:layout_marginEnd="12dp"
                        android:background="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:padding="8dp"
                        android:src="@drawable/shuffle_24px"
                        android:contentDescription="Reproducción aleatoria" />
                </LinearLayout>

                <!-- Lista de canciones (ahora dentro del ScrollView) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- RecyclerView con altura fija (sin scroll interno) -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cancionesAlbum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        tools:ignore="NotSibling" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!-- Mini Player -->
    <LinearLayout
        android:id="@+id/miniPlayer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/bottomNavigation"
        android:background="@color/blueNuestro"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/songImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Portada de la canción"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nombre de la Canción"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/songArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Artista"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:backgroundTint="#555555"
                android:progress="40"
                android:progressTint="#1DB954" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnRetroceder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Retroceder"
            android:background="@null"
            android:src="@android:drawable/ic_media_previous" />

        <!-- Botón de stop -->
        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Detener"
            android:background="@android:color/transparent"
            app:tint="#FFFFFF"/>

        <ImageButton
            android:id="@+id/btnAvanzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Avanzar"
            android:background="@null"
            android:src="@android:drawable/ic_media_next" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="#000e3b"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="7dp">

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000e3b"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/nav_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:src="@drawable/ic_home"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/homeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Home"
                android:textColor="#B3B3B3"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000e3b"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/nav_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_search"
                android:background="@android:color/transparent"
                android:contentDescription="Buscar"
                android:layout_weight="1"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/searchText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textColor="#B3B3B3"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000e3b"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/nav_create"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                android:background="@android:color/transparent"
                android:contentDescription="Crear"
                android:layout_weight="1"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/createText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Playlist"
                android:textColor="#B3B3B3"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noizzys_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000e3b"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/nav_noizzys"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/noizzy"
                android:background="@android:color/transparent"
                android:contentDescription="Noizzys"
                android:layout_weight="1"
                app:tint="#FFFFFF"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/noizzysText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Noizzys"
                android:textColor="#B3B3B3"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>