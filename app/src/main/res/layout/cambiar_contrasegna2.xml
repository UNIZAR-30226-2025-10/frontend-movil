<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo"
    android:gravity="center">

    <!-- Circulos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/circle2Text"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle2_drawable"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/circle1Text"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/circle_drawable"
            android:paddingTop="7dp"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/circle3Text"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle2_drawable"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Recuperaci칩n de contrase침a"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- Entrada para el correo -->
    <EditText
        android:id="@+id/codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el c칩digo"
        android:textColorHint="#B3B3B3"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/borde_azul_redondo"
        android:padding="16dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Bot칩n de siguiente -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:textColor="@color/fondo"
        android:background="@drawable/rounded_button"
        android:textSize="18sp"
        android:layout_marginHorizontal="32dp"
        android:fontFamily="@font/poppins_bold"
        android:textAllCaps="false"
        android:layout_marginVertical="15dp"
        />
</LinearLayout>
