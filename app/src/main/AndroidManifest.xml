<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:name=".MiApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.APISplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Agregar la actividad Inicio -->
        <activity android:name=".activities.Inicio"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad LogIn -->
        <activity android:name=".activities.Login"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad ElegirRegistro -->
        <activity android:name=".activities.ElegirRegistro"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Registro usuario -->
        <activity android:name=".activities.RegisterUser"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Registro Artista -->
        <activity android:name=".activities.RegisterArtist"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Codigo Artista -->
        <activity android:name=".activities.CodigoArtista"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Pendiente -->
        <activity android:name=".activities.Pendiente"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Home -->
        <activity android:name=".activities.Home"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Home -->
        <activity android:name=".activities.CambiarPassword1"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Home -->
        <activity android:name=".activities.CambiarPassword2"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".activities.CambiarPassword3"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>
            
        <!-- Agregar la actividad Perfil-->
        <activity android:name=".activities.Perfil"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Borrar cuenta -->
        <activity android:name=".activities.DeleteAccount"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <!-- Agregar la actividad Cerrar sesion -->
        <activity android:name=".activities.Logout"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".activities.Buscador"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".activities.CancionDetail"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".activities.ActualizarFavorito"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".activities.PlayPause"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>


        <activity android:name=".activities.PlaylistDetail"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <service android:name=".services.MusicPlayerService" />

        
    </application>

</manifest>
